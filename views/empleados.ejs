<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingreso de Empleados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="d-flex">
        <!-- Men煤 Lateral -->
        <nav class="sidebar bg-dark text-white p-3">
            <div class="text-center">
                <img src="/logo.jpeg" alt="Logo Empresa" class="logo">
                <h4 class="mt-2">Mi Empresa</h4>
                <p class="text-white">Usuario: </p>
            </div>
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a href="/dashboard" class="nav-link text-white"> Inicio</a>
                </li>
                <li class="nav-item">
                    <a href="/empleados" class="nav-link text-white"> Empleados</a>
                </li>
                <li class="nav-item">
                    <a href="/tallas" class="nav-link text-white"> Tallas</a>
                </li>
                <li class="nav-item mt-3">
                    <a href="/logout" class="btn btn-danger w-100">Cerrar Sesi贸n</a>
                </li>
            </ul>
        </nav>

        <!-- Contenido Principal -->
        <div class="content p-4 w-100">
            <h2>Ingreso de Empleados</h2>
            <form action="/empleados" method="POST">
                <div class="mb-3">
                    <label>Identificaci贸n</label>
                    <input type="number" name="identificacion" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label>Nombre del Empleado</label>
                    <input type="text" name="nombre" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label>Departamento</label>
                    <select name="departamento" class="form-control" required>
                        <option value="">Seleccione un departamento</option>
                        <option value="Ventas">Ventas</option>
                        <option value="Recursos Humanos">Recursos Humanos</option>
                        <option value="IT">IT</option>
                        <option value="Producci贸n">Producci贸n</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label>Cargo</label>
                    <input type="text" name="cargo" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label>Ciudad</label>
                    <input type="text" name="ciudad" class="form-control" required>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <button type="submit" class="btn btn-primary me-2"> Grabar</button>
                    <a href="/" class="btn btn-secondary"> Volver</a>
                </div>
                        </form>

            <div class="table-responsive mt-4">
                <h3> Lista de Empleados</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Identificaci贸n</th>
                            <th>Nombre</th>
                            <th>Departamento</th>
                            <th>Cargo</th>
                            <th>Ciudad</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (empleados && empleados.length > 0) { %>
                            <% empleados.forEach(empleado => { %>
                                <tr>
                                    <td><%= empleado.identificacion %></td>
                                    <td><%= empleado.nombre %></td>
                                    <td><%= empleado.departamento %></td>
                                    <td><%= empleado.cargo %></td>
                                    <td><%= empleado.ciudad %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">No hay empleados registrados.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            
                <!-- Botones de exportaci贸n -->
                <div class="d-flex justify-content-end flex-wrap mt-3">
                    <a href="/reporte-empleados-excel" class="btn btn-success me-2 mb-2"> Excel</a>
                    <a href="/reporte-empleados-pdf" class="btn btn-danger mb-2"> PDF</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleMenu() {
            document.querySelector('.sidebar').classList.toggle('show');
        }
        </script>

</body>
</html>
