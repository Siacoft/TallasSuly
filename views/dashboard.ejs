<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Estilos para el layout */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        /* Men칰 lateral */
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background-color: #2c3e50;
            color: white;
            padding-top: 20px;
            transition: all 0.3s;
        }

        .sidebar .logo {
            display: block;
            margin: 0 auto 10px auto;
            width: 120px;
            border-radius: 50%;
        }

        .sidebar .empresa-nombre {
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sidebar a {
            color: white;
            padding: 12px 20px;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background-color: #1a252f;
        }

        .sidebar a i {
            width: 25px;
            text-align: center;
            margin-right: 10px;
        }

        /* Contenido Principal */
        .content {
            margin-left: 260px;
            padding: 20px;
        }

        /* Barra superior */
        .topbar {
            background-color: #fff;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #ddd;
            box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
        }

        .bienvenida {
            font-size: 18px;
            font-weight: bold;
        }

        /* Ajuste responsivo */
        @media (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .content {
                margin-left: 210px;
            }
        }

        .chart-container {
    display: flex;
    flex-wrap: nowrap; /* No permite que los gr치ficos se apilen en dispositivos grandes */
    justify-content: space-around; /* Espacia los gr치ficos uniformemente */
    align-items: center;
    margin-top: 20px;
    overflow-x: auto; /* Permite desplazamiento horizontal en m칩viles si es necesario */
    gap: 20px; /* Espacio entre gr치ficos */
}

.chart-box {
    width: 45%; /* Cada gr치fico ocupa el 45% del contenedor */
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0px 2px 5px rgba(0,0,0,0.1);
    text-align: center;
}

@media (max-width: 768px) {
    .chart-container {
        flex-wrap: wrap; /* En m칩viles, los gr치ficos se apilan */
    }
    .chart-box {
        width: 100%; /* En m칩viles, cada gr치fico ocupa el ancho completo */
    }
}        
    </style>
</head>
<body>

    <!-- Men칰 Lateral -->
    <div class="sidebar">
        <img src="/logo.jpeg" alt="Logo Empresa" class="logo">
        <div class="empresa-nombre">Mi Empresa</div>
        <a href="/dashboard"><i class="fa-solid fa-house"></i> Dashboard</a>
        <a href="/empleados"><i class="fa-solid fa-user"></i> Empleados</a>
        <a href="/tallas"><i class="fa-solid fa-shirt"></i> Gesti칩n de Tallas</a>
        <a href="/reportes"><i class="fa-solid fa-file-pdf"></i> Reportes</a>
        <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i> Cerrar Sesi칩n</a>
    </div>

    <!-- Contenido Principal -->
    <div class="content">
        <!-- Barra Superior -->
        <div class="topbar">
            <span class="bienvenida">游녦 춰Bienvenido, <%= user.nombre %>!</span>
            <span>游닎 <%= user.user %></span>
        </div>

        <!-- Contenido del Dashboard -->
        <!--<h2>游늵 Panel de Control</h2> -->
        <!-- <p>Este es el lugar donde puedes administrar tu empresa.</p> -->
        <h2>游늵 Indicadores de Ventas</h2>

        <!-- Contenedor de gr치ficos -->
        <div class="chart-container">
            <div class="chart-box">
                <h5>Ventas Mensuales</h5>
                <canvas id="ventasMensuales"></canvas>
            </div>
            <div class="chart-box">
                <h5>Ventas por Categor칤a</h5>
                <canvas id="ventasCategorias"></canvas>
            </div>
        </div>        
    </div>
    <script>
        // Gr치fico de ventas mensuales
        const ctx1 = document.getElementById('ventasMensuales').getContext('2d');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun'],
                datasets: [{
                    label: 'Ventas en USD',
                    data: [12000, 15000, 18000, 22000, 25000, 27000],
                    backgroundColor: 'rgba(54, 162, 235, 0.6)'
                }]
            }
        });

        // Gr치fico de ventas por categor칤a
        const ctx2 = document.getElementById('ventasCategorias').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Ropa', 'Zapatos', 'Accesorios'],
                datasets: [{
                    label: 'Ventas en USD',
                    data: [30000, 20000, 10000],
                    backgroundColor: ['#ff6384', '#36a2eb', '#ffcd56']
                }]
            }
        });
    </script>    
</body>
</html>
